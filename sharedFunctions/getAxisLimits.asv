function limits = getAxisLimits(data, offset)
% data
% offset in percentage
data = data(:);
dataRange = abs(max(data)-min(data));
limits = [min(data)-dataRange*offset/100, ...
    max(data)+dataRange*offset/100];
% increment (chosen 7 ticks including min and max)
inc = round(dataRange/5, 1, "significant");
% calculate min and max limits
max_lim = ceil(limits(2)/inc)*inc;
min_lim = floor(limits(1)/inc)*inc;
limits = [min_lim, max_lim];


data = rand()


end